{
  "name": "ubuntu",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu-24.04",
  "containerEnv": {
    "DEVCONTAINER_NAME": "ubuntu",
    "DEVCONTAINER_USER": "vscode",
    "EDITOR": "code --wait",
    "LC_ALL": "C.UTF-8",
    "TZ": "Asia/Tokyo"
  },
  "onCreateCommand": "${containerWorkspaceFolder}/install.sh",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        // Editor
        // "editor.fontFamily": "'Monaspace Neon NF', monospace",
        "editor.formatOnSave": true,
        // Files
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,
        "files.trimTrailingWhitespace": true,
        // Terminal
        "terminal.integrated.defaultProfile.linux": "zsh",
        // "terminal.integrated.fontFamily": "'Monaspace Neon NF', monospace",
        // Shell script
        "[shellscript]": {
          "editor.defaultFormatter": "foxundermoon.shell-format"
        }
      },
      "extensions": [
        // Docker
        "ms-azuretools.vscode-containers",
        // Github actions
        "github.vscode-github-actions",
        // Shell script
        "foxundermoon.shell-format",
        "mads-hartmann.bash-ide-vscode",
        "timonwong.shellcheck",
        // Toml
        "tamasfe.even-better-toml",
        // Yaml
        "redhat.vscode-yaml"
      ]
    }
  }
}
